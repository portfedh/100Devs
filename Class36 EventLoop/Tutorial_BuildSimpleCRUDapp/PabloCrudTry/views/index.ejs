<!-- index.ejs -->
<!-- Render Template -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Star Wars Quote App</title>
  </head>

  <body>
    <h1>May Node and Express be with you.</h1>

    <!-- Form to Create a Quote -->
    <form action="/quotes" method="POST">
      <input type="text" placeholder="name" name="name" />
      <input type="text" placeholder="quote" name="quote" />
      <button type="submit">Submit</button>
    </form>

    <!-- Button to Update quotes -->
    <section data-position="update-quote">
      <div>
        <h2>Darth Vadar invades!</h2>
        <p>
          Replace first Yoda's quote with a quote written by Darth Vadar
        </p>
        <button id="update-button">Replace Yoda's quote</button>
      </div>
    </section>

    <!-- Button to Delete quote -->
    <section data-position="delete-quote">
      <div>
        <h2>Remove Darth Vader!</h2>
        <p>
          Delete one Darth Vader's quote. Does nothing if there are no more
          Darth Vader's quote
        </p>
        <button id="delete-button">Delete Darth Vader's quote</button>
      </div>
      <div id="message"></div>
    </section>

    <!-- Section  to Read quotes from Database and write them to the DOM-->
    <section data-position="quotes">
      <h2>Quotes</h2>
      <ul class="quotes">
        <!-- Loop through quotes -->
        <% for(var i = 0; i < quotes.length; i++) {%>
        <li class="quote">
          <!-- Output name from the iterated quote object -->
          <span><%= quotes[i].name %></span>:
          <!-- Output quote from the iterated quote object -->
          <span><%= quotes[i].quote %></span>
        </li>
        <% } %>
      </ul>
    </section>

    <!-- Load main.js file from public folder -->
    <script src="/main.js"></script>
  </body>
</html>