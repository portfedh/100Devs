<!-- Include Header -->
<%- include('partials/header') -%>

<!-- Create a bootstrap container -->
  <div class="container">
    <div class="row justify-content-center mt-5">

      <!-- Create an un-ordered list without default styles -->
      <ul class="row list-unstyled">
        <!-- Loop through 'posts' objects -->
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <!-- Create a hyperlink to specific post -->
            <a href="/post/<%= posts[i]._id%>">
              <!-- Create an image with the object image link -->
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div> 

  <!-- Include Footer -->
<%- include('partials/footer') -%>