<!DOCTYPE html>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up Form</title>
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:400,300"
      rel="stylesheet"
      type="text/css"
    />
    <link rel="stylesheet" href="css/style_report.css" />
  </head>

  <body>
    <div class="row">
      <div class="col-md-12">
        <div class="logo">
          <a href="/">
            <img src="salsaCandela.png" alt="LogoSalsaCandela" />
          </a>
        </div>
        <!-- Search section -->
        <form action="/search_results" method="post" id="search-form">
          <h1>Reporte de almnos:</h1>
          <!-- Section  to Read quotes from Database and write them to the DOM-->
          <section data-position="quotes">
            <table class="report-table">
              <thead>
                <tr>
                  <th>Nombre</th>
                  <th>Email</th>
                  <th>Edad</th>
                  <th>Sexo</th>
                  <th>Curso</th>
                  <th>Sucursal</th>
                  <th>Horario</th>
                  <th>Forma de pago</th>
                  <th>Suscripcion</th>
                </tr>
              </thead>
              <tbody>
                <% quotes.forEach(function(object) { %>
                <tr>
                  <td><%= object.first_name %></td>
                  <td><%= object.email %></td>
                  <td><%= object.Age %></td>
                  <td><%= object.sexo %></td>
                  <td><%= object.curso %></td>
                  <td><%= object.sucursal %></td>
                  <td><%= object.horario %></td>
                  <td><%= object.forma_pago %></td>
                  <td><%= object.suscripcion %></td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </section>
        </form>
        <button id="downloadButton">Download as CSV</button>
      </div>
    </div>
    <script type="text/javascript" src="js/report.js"></script>
  </body>
</html>
